<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
         layout_gravity:设置控件在父控件中的位置
    	 gravity:设置控件的内容在该控件中的位置
    	 
    	 layout_marginTop:设置控件距离某控件的位置
    	 paddingTop:设置距离控件内边框的距离 	 
    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866ff00"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="高级工具"
        android:textSize="25sp" />


    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询号码归属地"
        android:onClick="queryAddress"
        android:background="@drawable/selector_contact_button"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        />
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信备份"
        android:onClick="backupSms"
        android:background="@drawable/selector_contact_button"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        />

    <ProgressBar
        android:id="@+id/pb_atools_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信还原"
        android:onClick="restoreSms"
        android:background="@drawable/selector_contact_button"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        />
</LinearLayout>