<?xml version="1.0" encoding="utf-8"?>
<!-- 状态选择器，根据不同的状态显示不同的图片 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/shape_drawable_pressed" 
          android:state_pressed="true"/><!-- pressed:按下时显示的图片 -->
    <item android:drawable="@drawable/shape_drawable"/><!-- default:默认情况下显示的图片 -->

</selector>